<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tw1"
        android:layout_width="63dp"
        android:layout_height="65dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="156dp"
        android:text="Hello World!"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="81dp"
        android:onClick="siema"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/wyswie"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/wpisztext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="48dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/tw1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:textAlignment="center"
        android:text="TextView"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/tw1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wyswie"
        android:layout_width="168dp"
        android:layout_height="43dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="315dp"
        android:text="TextView"
        android:textSize="25dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>